<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="TitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:id">@+id/title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">20dp</item>
    </style>
    
    <style name="MenuBtnTextStyle">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#d6e0f6</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">30dp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
    <style name="TitleBarInGame">
        <item name="android:windowNoTitle">true</item>
        <item name="android:id">@+id/title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#0564aa</item>
    </style>
	
     <style name="PointsTextStyle">
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">50dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#afafa1</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	 </style>
	 
     <style name="OtherPointsTextStyle">
	    <item name="android:textColor">#1b95b8</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#afafa1</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:textSize">20dp</item>
	 </style>
	 
     <style name="QuestionProgressBarStyle">
	    <item name="android:textColor">#000000</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">28dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#afafa1</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	 </style>	

	 <style name="InGameProgressbarStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>"
	 </style>
	 
	 <style name="DialogDistanceStyle">
	    <item name="android:textColor">#177ba2</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">70dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#1ea1c7</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	 </style>
	 
	 <style name="DialogLocationStyle">
	    <item name="android:textColor">#ff7c09</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">40dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#fc9336</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	 </style>
	 
	 <style name="DialogScoreStyle">
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">70dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#1e2302</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	 </style>
	 
	 <style name="DialogNextStyle">
	    <item name="android:textColor">#cef2ff</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">35dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#115581</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	 </style>
    
	 <style name="DialogStopStyle">
	    <item name="android:textColor">#ffe9d5</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">35dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#a04f09</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	 </style>
	 
	 <style name="DialogStartStyle">
	    <item name="android:textColor">#ffe9d5</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">40dp</item>
	    <item name="android:textStyle">bold</item>
	 </style>
</resources>